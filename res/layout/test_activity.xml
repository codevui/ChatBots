<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layoutCommandFooter"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal"
        android:padding="5dp" >

        <EditText
            android:id="@+id/etText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btnVoice"
            android:layout_centerHorizontal="true"
            android:descendantFocusability="beforeDescendants"
            android:hint="@string/askQuestion"
            android:inputType="text"
            android:singleLine="true"
            android:textSize="20sp" >

            <requestFocus />
        </EditText>

        <ImageButton
            android:id="@+id/btnVoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:contentDescription="@string/speak"
            android:src="@android:drawable/ic_btn_speak_now" />
    </RelativeLayout>

    <ViewFlipper
        android:id="@+id/ViewFlipper01"
        android:layout_width="fill_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/btnAB"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:weightSum="1" >

                <ImageView
                    android:id="@+id/imgSlide"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_gravity="center"
                    android:layout_marginTop="5sp"
                    android:layout_weight="0.7"
                    android:contentDescription="@string/main_empty_list"
                    android:src="@drawable/course1slide2" />

                <TextView
                    android:id="@+id/txSlide"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_marginTop="12dp"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:padding="2sp"
                    android:text=""
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnAB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/btnCD"
                android:orientation="horizontal"
                android:weightSum="2" >

                <Button
                    android:id="@+id/planA1"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_margin="2sp"
                    android:layout_weight="1"
                    android:background="@drawable/send_button"
                    android:contentDescription="@string/speak"
                    android:onClick="planA"
                    android:text=""
                    android:textColor="#000" />

                <Button
                    android:id="@+id/planB1"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_margin="2sp"
                    android:layout_weight="1"
                    android:background="@drawable/send_button"
                    android:contentDescription="@string/speak"
                    android:onClick="planB"
                    android:src="@android:drawable/ic_media_play"
                    android:text=""
                    android:textColor="#000" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnCD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:weightSum="2" >

                <Button
                    android:id="@+id/planC1"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_margin="2sp"
                    android:layout_weight="1"
                    android:background="@drawable/send_button"
                    android:contentDescription="@string/speak"
                    android:onClick="planC"
                    android:text=""
                    android:textColor="#000" />

                <Button
                    android:id="@+id/planD1"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_margin="2sp"
                    android:layout_weight="1"
                    android:background="@drawable/send_button"
                    android:contentDescription="@string/speak"
                    android:onClick="planD"
                    android:src="@android:drawable/ic_media_play"
                    android:text=""
                    android:textColor="#000" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txSlide2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_weight="0.3"
                android:gravity="center"
                android:padding="2sp"
                android:text=""
                android:textSize="20sp" />

            <Button
                android:id="@+id/planA2"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_margin="2sp"
                android:layout_weight="1"
                android:background="@drawable/send_button"
                android:contentDescription="@string/speak"
                android:onClick="planA"
                android:text=""
                android:textColor="#000" />

            <Button
                android:id="@+id/planB2"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_margin="2sp"
                android:layout_weight="1"
                android:background="@drawable/send_button"
                android:contentDescription="@string/speak"
                android:onClick="planB"
                android:src="@android:drawable/ic_media_play"
                android:text=""
                android:textColor="#000" />

            <Button
                android:id="@+id/planC2"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_margin="2sp"
                android:layout_weight="1"
                android:background="@drawable/send_button"
                android:contentDescription="@string/speak"
                android:onClick="planC"
                android:text=""
                android:textColor="#000" />

            <Button
                android:id="@+id/planD2"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_margin="2sp"
                android:layout_weight="1"
                android:background="@drawable/send_button"
                android:contentDescription="@string/speak"
                android:onClick="planD"
                android:src="@android:drawable/ic_media_play"
                android:text=""
                android:textColor="#000" />
        </LinearLayout>
    </ViewFlipper>

</LinearLayout>